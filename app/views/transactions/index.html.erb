<h1>Transactions#index</h1>
<p>Find me in app/views/transactions/index.html.erb</p>
<% @transactions.each do |t| %>
<div class="box">
  <div class="list">
    <% item = Item.find_by_id(t.item_id)%>   <!--<!% item = Item.find_by_id(t.item_id)%>  -->
    <%= item.category %>
    <p><strong>price: </strong> <%= t.price/100.round(2)%></p>
    <p><strong>stripe_transaction_id: </strong> <%= t.stripe_transaction_id%></p>
    <p><strong>Date purchased: </strong> <%= t.created_at.strftime("%A the %dth %B %Y")%> <%= time_tag t.created_at %></p>
  </div>
  <img src="<%=item.image_url%>" alt="">
</div>

  <% end %>

<%=link_to "HOME" ,root_path%>
