<%= form_for @photo do |f| %>
  <%= render "shared/errors", object: @photo %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <% if @photo.image_data? %>
    Remove attachment: <%= f.check_box :remove_image %>
  <% end %>

  <%= f.submit %>
<% end %>
