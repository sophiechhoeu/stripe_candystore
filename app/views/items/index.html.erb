<p id="notice"><%= notice %></p>
<%= render 'partials/userlogin' %>
<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <!-- <th>User</th> -->
      <th>Category</th>
      <th>Image data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.price %></td>
        <!-- <td><%#= item.user_id %></td> -->
        <td><%= item.category %></td>
        <td><img src="<%= item.image_url %>"></td>
        <td><%= link_to 'Show', item %></td>
        <%if item.user_id == current_user.id%>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'My Purchase', mypurchase_path %>
<%= link_to 'New Item', new_item_path %>
